# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{html,js,json,md,scss,yml,yaml}]
indent_size = 2

[Makefile]
indent_style = tab

[.{rbenv-version,ruby-version}]
insert_final_newline = false
